<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="1dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/no_counter1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="16dp"
                android:text="Question"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/no_counter"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="16dp"
                android:text="0/0"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:text="Questions"
                android:background="@drawable/question_bg"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/optionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:orientation="vertical"
            android:padding="6dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="Button"
                android:textAllCaps="false"
                android:background="@drawable/bounder_object"
                android:backgroundTint="#959393"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:layout_margin="8dp"
                android:text="Button"
                android:background="@drawable/bounder_object"
                android:backgroundTint="#959393"/>
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="Button"
                android:textAllCaps="false"
                android:background="@drawable/bounder_object"
                android:backgroundTint="#959393"/>
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="Button"
                android:textAllCaps="false"
                android:background="@drawable/bounder_object"
                android:backgroundTint="#959393"/>

        </LinearLayout>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="0.07"
            android:background="@drawable/button_bd"
            android:backgroundTint="#FB541F"
            android:text="Next Questions"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:enabled="false"/>


    </LinearLayout>

</RelativeLayout>